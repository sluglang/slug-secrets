<div class="box">
	<h4 style="margin-top:0;">Create a secret</h4>

	<form hx-post="/secrets"
		  hx-target="#result"
		  hx-swap="innerHTML">

		<label for="secret">Secret message</label>
		<textarea id="secret" name="secret" required maxlength="10000"
				  placeholder="Type something you only want seen a few times...">{{secret}}</textarea>
		<p class="muted">Tip: avoid anything you can’t rotate (like real passwords).</p>

		<div class="row">
			<div class="column">
				<label for="ttl">Time to live</label>
				<select id="ttl" name="ttl">
					<option value="10m">10 minutes</option>
					<option value="1h" selected>1 hour</option>
					<option value="24h">24 hours</option>
					<option value="7d">7 days</option>
				</select>
			</div>

			<div class="column">
				<label for="views">Max views</label>
				<select id="views" name="views">
					<option value="1" selected>1 view</option>
					<option value="2">2 views</option>
					<option value="3">3 views</option>
					<option value="5">5 views</option>
					<option value="10">10 views</option>
				</select>
			</div>
		</div>

		<button class="button-primary" type="submit">Create link</button>
		<span class="spinner muted" style="margin-left:.8rem;">Creating…</span>
	</form>

	<div id="result" style="margin-top: 1.5rem;"></div>
</div>
